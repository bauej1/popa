<?xml version="1.0" encoding="utf-8"?>

<!--This selector is used to change the background from ImageButtons to simulate the onClick-Animation -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disabled state-->
    <item
        android:state_enabled="false"
        android:drawable="@color/tileBackground"
        />
    <!-- pressed state / clicked state -->
    <item
        android:state_pressed="true"
        android:state_enabled="true"
        android:drawable="@color/appBackground"
        />
</selector>


