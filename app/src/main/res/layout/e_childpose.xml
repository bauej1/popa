<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:background="@color/appBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/tileBackground"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="20dp"
                    android:text="@string/ex1"
                    android:textColor="@color/appBackground"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/childpose" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="@string/childpose"
                    android:textColor="@color/appBackground" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/tileBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/steps"
                    android:textColor="@color/appBackground"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:id="@+id/cp1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp">

                        <TextView
                            android:id="@+id/textView37"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:text="@string/one"
                            android:textColor="@color/appBackground" />

                        <TextView
                            android:id="@+id/textView38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cp1"
                            android:textColor="@color/appBackground" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cp2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:text="@string/two"
                            android:textColor="@color/appBackground" />

                        <TextView
                            android:id="@+id/textView40"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cp2"
                            android:textColor="@color/appBackground" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cp3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView41"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:text="@string/three"
                            android:textColor="@color/appBackground" />

                        <TextView
                            android:id="@+id/textView42"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cp3"
                            android:textColor="@color/appBackground" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cp4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView43"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:text="@string/four"
                            android:textColor="@color/appBackground" />

                        <TextView
                            android:id="@+id/textView44"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cp4"
                            android:textColor="@color/appBackground" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cp5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:text="@string/five"
                            android:textColor="@color/appBackground" />

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cp5"
                            android:textColor="@color/appBackground" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cp6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView45"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:text="@string/six"
                            android:textColor="@color/appBackground" />

                        <TextView
                            android:id="@+id/textView46"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cp6"
                            android:textColor="@color/appBackground" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cp7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView35"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:text="@string/seven"
                            android:textColor="@color/appBackground" />

                        <TextView
                            android:id="@+id/textView36"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cp7"
                            android:textColor="@color/appBackground" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>